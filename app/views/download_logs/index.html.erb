<% provide(:title, "导出数量记录") %>
<h1 class="page-header">导出数量记录</h1>
<% if @logs.any? %>
  <hr>
  <table class="table table-hover table-responsive">
    <thead>
      <tr>
        <th>日期</th>
        <th>导出数量</th>
      </tr>
    </thead>
    <tbody>
      <% @logs.each do |log| %>
      <tr>
        <td><%= log.time %></td>
        <td><%= log.ids.to_a.size %></td>
        <td>
          <%= link_to '删除', download_log_path(log), class: 'btn btn-danger', data:{confirm: '确定删除吗?'}, method: :delete %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>